<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Buttons for navigating to different activities -->
    <Button
        android:id="@+id/button_income"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="収入" />

    <Button
        android:id="@+id/button_expense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="支出" />

    <Button
        android:id="@+id/button_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="残金" />

    <Button
        android:id="@+id/button_savings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="預金設定" />

    <Button
        android:id="@+id/button_ledger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="金銭通帳" />

    <Button
        android:id="@+id/button_prediction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AI予測" />

</LinearLayout>
